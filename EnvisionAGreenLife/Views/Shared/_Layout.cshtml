    <div class="topnav" id="myTopnav">
        <img class="logo" src="~/Images/TeamLogo.png" alt="project logo" style="margin-left:10px; margin-top:2.5px; width:90px; height:90px" />
        <a style="margin-left:9.5%" href="#home" class="active">Home</a>
        <a href="@Url.Action("Quiz","Home")">Take the quiz</a>
        <div class="dropdown" style="margin-top:16px">
            <button class="dropbtn">
                <strong>
                    More Info
                </strong>
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="@Url.Action("AppliancesType","Home")">SAVE ENERGY</a>
                <a href="@Url.Action("ReduceFoodWaste","Home")">REDUCE FOOD WASTE</a>
                <a href="@Url.Action("Reuse","Home")">REUSE</a>
            </div>
        </div>
        <a href="@Url.Action("About","Home")">About</a>
        <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="myFunction()">&#9776;</a>
    </div>

    <div class="container body-content">
        <br/>
        @Html.Raw(BreadCrumb.Display())
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Envision a Green Life</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
</body>
