@using MvcBreadCrumbs
<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Envision a Green Life</title>
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <link href="~/Styles/normalize.css" rel="stylesheet" type="text/css">
    <link href="~/Styles/webflow.css" rel="stylesheet" type="text/css">
    <link href="~/Styles/global.css" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">WebFont.load({ google: { families: ["Sen:regular,700,800"] } });</script>
    <script type="text/javascript">!function (o, c) { var n = c.documentElement, t = " w-mod-"; n.className += t + "js", ("ontouchstart" in o || o.DocumentTouch && c instanceof DocumentTouch) && (n.className += t + "touch") }(window, document);</script>
    <link href="~/Images/favicon.png" rel="shortcut icon" type="image/x-icon">
    <link href="~/Images/favicon.png" rel="apple-touch-icon">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Styles/Breadcrumb.css" rel="stylesheet" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v1.10.0/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v1.10.0/mapbox-gl.css" rel="stylesheet" />
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.min.js"></script>
    <link rel="stylesheet"
          href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.css"
          type="text/css" />
</head>
<body>
    <div class="menu-wrapper">
        <div data-collapse="medium" data-animation="over-right" data-duration="400" role="banner" class="navbar w-nav">

            <div>
                @using (Html.BeginForm("General_search", "Food_recipes", FormMethod.Get, new { @class = "home-search w-form" }))
                {
                    <div>
                        @Html.TextBox("SearchString", null, new { required = "", id = "search", style = "maxlength: 256;", @class = "home-search-bar w-input", @placeholder = "Search..." })
                        <input type="submit" value="🔍" class="home-search-but w-button">
                    </div>
                }
            </div>
            <div class="container">
                <div class="nav-wrapper">
                    <a href="@Url.Action("Index","Home")" aria-current="page" class="brand w-nav-brand w--current">
                        <img src="~/Images/TeamLogo.png" width="60" height="60" srcset="~/Images/TeamLogo-p-500.png 500w, ~/Images/TeamLogo.png 800w" sizes="60px" style="margin-left:10px;" alt="">
                    </a>
                    <div class="cart-nav-wrapper">
                        <nav role="navigation" class="nav-menu w-nav-menu">
                            <a href="@Url.Action("Index","Home")" aria-current="page" class="nav-link w-nav-link w--current">Home</a>
                            <a href="@Url.Action("Quiz","Home")" class="nav-link w-nav-link">Quiz</a>
                            <a href="@Url.Action("ReduceFoodWaste","Home")" class="nav-link w-nav-link">Reduce Waste</a>
                            <div data-hover="1" data-delay="0" class="w-dropdown" style="z-index:1000;">
                                <div class="nav-dropdown w-dropdown-toggle">
                                    <div class="nav-dropdown-icon w-icon-dropdown-toggle"></div>
                                    <div class="dropdown-link">Save Energy</div>
                                </div>
                                <nav class="w-dropdown-list">
                                    <a href="@Url.Action("AppliancesType","Home")" class="sub-dropdown-list-item w-dropdown-link">Search Appliance</a>
                                </nav>
                            </div>
                            <div data-hover="1" data-delay="0" class="w-dropdown" style="z-index:1000;">
                                <div class="nav-dropdown w-dropdown-toggle">
                                    <div class="nav-dropdown-icon w-icon-dropdown-toggle"></div>
                                    <div class="dropdown-link">Reuse</div>
                                </div>
                                <nav class="w-dropdown-list">
                                    <a href="@Url.Action("Composting", "Home")" class="sub-dropdown-list-item w-dropdown-link">Composting</a>
                                    <a href="@Url.Action("Index", "recycling_centres")" class="sub-dropdown-list-item w-dropdown-link">Recycling centre map</a>
                                </nav>
                            </div>
                            <a href="@Url.Action("About","Home")" class="nav-link w-nav-link">Learn More</a>
                        </nav>
                        <div class="nav-button w-nav-button">
                            <div class="w-icon-nav-menu"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="body-content">
        @RenderBody()
        <footer>
            <div class="footer">
                <div class="container">
                    <div class="text-block-2"><strong class="bold-text">© 2020 - Envision A Green Life</strong></div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.4.1.min.220afd743d.js?site=5eb3cb2d67bd4c5c1fcfb790" type="text/javascript" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="~/Scripts/webflow.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>