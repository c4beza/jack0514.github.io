@using PagedList.Mvc
@using MvcBreadCrumbs
@model  EnvisionAGreenLife.ViewModel.CdList

@{
    ViewBag.Title = "Clothes Dryer Top Recommendations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="page-title-section">
        <div class="container">
            <h1 class="page-title">Clothes Dryer Top Recommendations</h1>
        </div>
    </div>
    <div class="breadcrum" style="margin-left:10%">
        @Html.Raw(BreadCrumb.Display())
    </div>
    <div class="content-section" style="padding-top: 35px;">
        <p class="paragraph">Dry your clothes in a couple of minutes with a highly efficient clothes dryer</p><br />
        <form asp-action="Index" method="get" class="appliance-collection-search-bar w-form">
            <input type="search" class="appliance-collection-search w-input" maxlength="256" name="SearchString" value="@ViewData["currentFilter"]" placeholder="Find by brand…" id="search" required="">
            @Html.DropDownList("Ratings", null, htmlAttributes: new { @class = "recipe-dropdown" })
            <input type="submit" value="Search" class="appliancec-collection-search-but w-button">
        </form>
        <a href="@Url.Action("TopRecommendations", "Clothes_dryer")" class="button-3 w-button">Top Recommendations</a>
    </div>

    <div class="section-3">
        <div class="w-layout-grid grid-3">
            @{int x = 0;}
            @if (Model != null)
            {
                foreach (var item in Model.Clothes_dryers)
                {
                    x++;
                    <div class="appliance-card">
                        <a href='@Url.Action("Details", "Clothes_dryer",new { id = @item.Clothes_Dryer_Id })'>
                            @if (item.Clothes_Dryer_Id % 9 == 1)
                            {
                                <img src='@Url.Content("~/Images/cw1.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 2)
                            {
                                <img src='@Url.Content("~/Images/cw2.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 3)
                            {
                                <img src='@Url.Content("~/Images/cw3.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 4)
                            {
                                <img src='@Url.Content("~/Images/cw4.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 5)
                            {
                                <img src='@Url.Content("~/Images/cw5.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 6)
                            {
                                <img src='@Url.Content("~/Images/cw6.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 7)
                            {
                                <img src='@Url.Content("~/Images/cw7.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 8)
                            {
                                <img src='@Url.Content("~/Images/cw8.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                            else
                            if (item.Clothes_Dryer_Id % 9 == 0)
                            {
                                <img src='@Url.Content("~/Images/cw9.png")' alt="Clothes Dryer" class="appliance-card-image" />
                            }
                        </a>
                        <p>
                            <button onclick="location.href='@Url.Action("Details", "Clothes_dryer",new { id = @item.Clothes_Dryer_Id })'" type="button" class="appliance-card-but w-button" style="height:100px">
                                @item.Brand: @item.Model_No
                            </button>
                        </p>
                    </div>
                }
            }
        </div>
    </div>
    <br>
    <br>
    <div class="pagecount" style="margin:auto; text-align:center">
        Page @(Model.Clothes_dryers.PageCount < Model.Clothes_dryers.PageNumber ? 0 : Model.Clothes_dryers.PageNumber)
        of @Model.Clothes_dryers.PageCount   @Html.PagedListPager(Model.Clothes_dryers, page => Url.Action("Index", new { page, currentfilter = ViewBag.currentfilter }))
    </div>
</body>
